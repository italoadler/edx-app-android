<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/content_error"
        style="@style/content_unavailable_layout"
        tools:visibility="visible">

        <org.edx.mobile.view.custom.IconImageViewXml
            android:id="@+id/content_error_icon"
            android:layout_width="@dimen/content_unavailable_error_icon_size"
            android:layout_height="@dimen/content_unavailable_error_icon_size"
            app:iconColor="@color/edx_brand_gray_back"
            app:iconName="fa-wifi" />

        <TextView
            android:id="@+id/content_error_text"
            android:visibility="visible"
            style="@style/content_unavailable_error_text"
            tools:text="@string/reset_no_network_message" />

        <Button
            android:id="@+id/content_error_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/selectable_box_overlay"
            style="@style/edX.Widget.DisableableButton"
            tools:visibility="visible"
            tools:text="Reload" />
    </LinearLayout>
</layout>
